<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"
        android:id="@+id/gl"
        ></androidx.constraintlayout.widget.Guideline>
    <Spinner
        app:layout_constraintRight_toLeftOf="@id/gl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvAddress"
        android:id="@+id/sp1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:paddingTop="20dp"
        style="@style/TextStyle31"
        ></Spinner>
    <TextView
        android:layout_width="0dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        app:layout_constraintTop_toBottomOf="@id/sp1"

        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Chicago, IL 60611, USA"
        android:textColor="@color/dark_blue_grey"
        ></TextView>
    <ImageView
        android:layout_width="25dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/search"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/sp1"
        app:layout_constraintLeft_toRightOf="@id/tvAddress"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_marginTop="40dp"
        ></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>