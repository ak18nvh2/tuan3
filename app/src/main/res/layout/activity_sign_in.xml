<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.activities.SignInActivity">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/glVer1"
        app:layout_constraintGuide_percent="0.1"
        ></androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/glVer2"
        app:layout_constraintGuide_percent="0.9"
        ></androidx.constraintlayout.widget.Guideline>
    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/blob_bg"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></ImageView>

    <ImageView
        android:id="@+id/btnQuayLai_si"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/group_4"
        app:layout_constraintBottom_toBottomOf="@id/imgBg"
        app:layout_constraintLeft_toLeftOf="@id/imgBg"
        app:layout_constraintTop_toTopOf="@id/imgBg"
        app:layout_constraintVertical_bias="0.3"></ImageView>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/hi_blob"
        app:layout_constraintLeft_toLeftOf="@id/imgBg"
        app:layout_constraintRight_toRightOf="@id/imgBg"
        app:layout_constraintTop_toTopOf="@id/imgBg"
        app:layout_constraintBottom_toBottomOf="@id/imgBg"
        android:layout_marginTop="170dp"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:text="Hello again.\nWelcome back."
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgBg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="#161f3d"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL ADDRESS"
        android:id="@+id/tv_EmailAddress"
        android:textColor="#161f3d"
        app:layout_constraintVertical_bias="0.46"
        app:layout_constraintLeft_toRightOf="@id/glVer1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></TextView>
    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColor="#161f3d"
        android:id="@+id/edt_EmailAddressSignIn"
        app:layout_constraintRight_toLeftOf="@id/glVer2"
        app:layout_constraintLeft_toRightOf="@id/glVer1"
        app:layout_constraintTop_toBottomOf="@id/tv_EmailAddress"
        android:hint="Type your email address!">
    </EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/tv_PassWord"
        android:textColor="#161f3d"
        app:layout_constraintTop_toBottomOf="@id/edt_EmailAddressSignIn"
        app:layout_constraintLeft_toRightOf="@id/glVer1"
        android:layout_marginTop="20dp"
        ></TextView>
    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/edt_PassWordSignIn"
        app:layout_constraintLeft_toRightOf="@id/glVer1"
        app:layout_constraintTop_toBottomOf="@id/tv_PassWord"
        app:layout_constraintRight_toLeftOf="@id/glVer2"
        android:inputType="textPassword"
        android:maxLength="16"
        android:hint="Type your password!"
        ></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/tv_ForgotPassword"
        android:textColor="#161f3d"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/edt_PassWordSignIn"
        app:layout_constraintLeft_toLeftOf="@id/edt_PassWordSignIn"
        app:layout_constraintRight_toRightOf="@id/edt_PassWordSignIn"
        app:layout_constraintTop_toTopOf="@id/edt_PassWordSignIn"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintVertical_bias="0.3"
        android:gravity="center_horizontal"></TextView>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/btn_SignIn"
        android:textAllCaps="false"
        android:background="@drawable/rectangular_btn"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/edt_PassWordSignIn"
        app:layout_constraintLeft_toRightOf="@id/glVer1"
        app:layout_constraintRight_toLeftOf="@id/glVer2"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to Friendly Desi?"
        android:id="@+id/tvNew"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_SignIn"
        android:layout_marginTop="20dp"
        android:textColor="#1d1d26"
        app:layout_constraintHorizontal_bias="0.4"
        ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#e9446a"
            android:text="Sign up"
            android:id="@+id/tv_SignUp"
            app:layout_constraintTop_toBottomOf="@id/btn_SignIn"
            app:layout_constraintLeft_toRightOf="@id/tvNew"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"
></TextView>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:src="@drawable/bottom_blob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="3:1"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>